<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".DashboardFragment">
    <com.google.android.material.button.MaterialButton
            android:text="START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/_startButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="98dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" android:layout_marginEnd="150dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton
            android:text="STOP"
            android:layout_width="101dp"
            android:layout_height="49dp" android:id="@+id/_stopButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            android:layout_marginTop="129dp" app:layout_constraintTop_toBottomOf="@+id/_startButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="408dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="150dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>